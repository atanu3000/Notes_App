<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/navbar.ejs") %>
        <div class="container border rounded my-5 p-5">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Notes</h1>
                <div>
                    <a class="btn btn-info" href="/addNote">Add +</a>
                    <a class="btn btn-danger" href="/deleteAll">Delete All</a>
                </div>
            </div>
            <hr />
            <% if (notes.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-3 row-cols-sm-2 g-4">
                <% notes.forEach(note => { %>
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div
                                class="d-flex justify-content-between align-items-center"
                            >
                                <h5 class="card-title"><%= note.title %></h5>
                                <div>
                                    <a
                                        href="/edit/<%= note._id %>"
                                        class="btn btn-sm btn-warning"
                                        ><ion-icon id="editBtn" name="create-outline"></ion-icon></a
                                    >
                                    <a
                                        onclick="return confirm('Delete this note?')"
                                        href="/deleteNote/<%= note._id %>"
                                        class="btn btn-sm btn-danger"
                                        ><ion-icon name="trash"></ion-icon></a
                                    >
                                </div>
                            </div>
                            <hr />
                            <p class="card-text"><%= note.details %></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <h2 class="text-center mt-5">No notes to show!</h2>
            <% } %>
        </div>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>
